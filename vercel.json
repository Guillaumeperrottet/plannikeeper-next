{
  "crons": [
    {
      "path": "/api/cron/daily-emails",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/recurring-tasks-reminder",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/renew-recurring-tasks",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/recalculate-storage",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-unverified-users",
      "schedule": "0 3 * * *"
    }
  ],

  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Content-Type", "value": "application/manifest+json" }
      ]
    }
  ]
}
